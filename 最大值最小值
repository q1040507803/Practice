# include <stdio.h> # define M 30 main() 
{ int a[M],n,i,max,min; 
  printf("请输入n（n<%d）:",M);
  scanf("%d",&n); 
  printf("请输入这%d个数:\n",n);   
  for(i=0;i<n;i++)   
      scanf("%d",&a[i]);   
  max=min=a[0]; 
  for(i=0;i<n;i++)   
  {
      if(a[i]>max)     
          max=a[i]; 
  } 
  for(i=0;i<n;i++)   
  {
      if(a[i]<min)
           min=a[i]; 
  } 
  printf("这%d个数中最大的数为：%d\n",n,max);    
  printf("这%d个数中最小的数为：%d\n",n,min); 
}
